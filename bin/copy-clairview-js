#!/bin/sh

set -e

# This script copies the following built files from clairview-js so that they can served on ClairView's CDN

cp node_modules/clairview-js/dist/array.js* frontend/dist/
cp node_modules/clairview-js/dist/array.full.js* frontend/dist/
cp node_modules/clairview-js/dist/recorder.js* frontend/dist/
cp node_modules/clairview-js/dist/recorder-v2.js* frontend/dist/
cp node_modules/clairview-js/dist/surveys.js* frontend/dist/
cp node_modules/clairview-js/dist/exception-autocapture.js* frontend/dist/
cp node_modules/clairview-js/dist/web-vitals.js* frontend/dist/
